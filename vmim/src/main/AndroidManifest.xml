<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vmloft.develop.library.im">

    <!--访问网络-->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--读取手机状态-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!--访问相机-->
    <uses-permission android:name="android.permission.CAMERA" />
    <!--录音权限-->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!--读写存储-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--唤醒锁-->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- 修改音频设置 -->
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <application>
        <!--聊天界面-->
        <activity
            android:name=".chat.IMChatActivity"
            android:theme="@style/IMTheme.Chat"
            android:windowSoftInputMode="adjustResize|stateHidden" />

        <!--预览界面-->
        <activity
            android:name=".chat.IMPreviewActivity"
            android:theme="@style/IMTheme.Chat"
            android:windowSoftInputMode="adjustNothing|stateAlwaysHidden" />

        <!--通话界面-->
        <activity
            android:name=".call.multi.IMCallActivity"
            android:theme="@style/IMTheme.Chat"
            android:windowSoftInputMode="adjustNothing|stateAlwaysHidden" />

        <!--通话界面-->
        <activity
            android:name=".call.VoiceCallActivity"
            android:theme="@style/IMTheme.Chat"
            android:windowSoftInputMode="adjustNothing|stateAlwaysHidden" />
    </application>
</manifest>
