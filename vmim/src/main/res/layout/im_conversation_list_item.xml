<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/im_conversation_selector">
    <!--头像-->
    <ImageView
        android:id="@+id/im_conversation_avatar_iv"
        android:layout_width="@dimen/vm_dimen_48"
        android:layout_height="@dimen/vm_dimen_48"
        android:layout_margin="@dimen/vm_margin_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/im_avatar_default_01" />
    <!--未读数-->
    <TextView
        android:id="@+id/im_conversation_red_dot_tv"
        style="@style/VMText.Caption"
        android:background="@drawable/im_chat_msg_red_dot_bg"
        android:gravity="center"
        android:minWidth="@dimen/vm_dimen_16"
        android:minHeight="@dimen/vm_dimen_16"
        android:paddingLeft="@dimen/vm_dimen_4"
        android:paddingRight="@dimen/vm_dimen_4"
        android:textColor="@color/vm_white"
        android:textSize="@dimen/vm_size_8"
        app:layout_constraintEnd_toEndOf="@+id/im_conversation_avatar_iv"
        app:layout_constraintTop_toTopOf="@+id/im_conversation_avatar_iv"
        tools:text="9" />
    <!--标题-->
    <TextView
        android:id="@+id/im_conversation_title_tv"
        style="@style/VMText.Title"
        android:layout_marginStart="@dimen/vm_margin_normal"
        android:ellipsize="end"
        android:maxEms="10"
        android:maxLines="1"
        android:textSize="@dimen/vm_size_16"
        app:layout_constraintBottom_toTopOf="@+id/im_conversation_content_tv"
        app:layout_constraintStart_toEndOf="@+id/im_conversation_avatar_iv"
        app:layout_constraintTop_toTopOf="@+id/im_conversation_avatar_iv"
        tools:text="小不点小不点小不点小不点" />
    <!--时间-->
    <TextView
        android:id="@+id/im_conversation_time_tv"
        style="@style/VMText.Caption"
        android:layout_width="@dimen/vm_dimen_0"
        android:layout_marginStart="@dimen/vm_margin_normal"
        android:layout_marginEnd="@dimen/vm_margin_normal"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/vm_size_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/im_conversation_title_tv"
        tools:text="2019年4月5日" />
    <!--文案-->
    <TextView
        android:id="@+id/im_conversation_content_tv"
        style="@style/VMText.Body1"
        android:layout_width="@dimen/vm_dimen_0"
        android:layout_marginStart="@dimen/vm_margin_normal"
        android:layout_marginEnd="@dimen/vm_margin_normal"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/vm_size_12"
        app:layout_constraintBottom_toBottomOf="@+id/im_conversation_avatar_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/im_conversation_avatar_iv"
        app:layout_constraintTop_toBottomOf="@+id/im_conversation_title_tv"
        tools:text="你什么时候出来啊，我等你你什么时候出来啊，我等你你什么时候出来啊，我等你" />
    <!--分割线-->
    <View
        android:id="@+id/im_conversation_decoration"
        android:layout_width="@dimen/vm_dimen_0"
        android:layout_height="@dimen/vm_dimen_0_5"
        android:background="@color/vm_decoration_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/im_conversation_avatar_iv" />

</android.support.constraint.ConstraintLayout>